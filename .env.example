######################################################################
# Example Environment Variables (NO REAL SECRETS â€” PLACEHOLDERS ONLY) #
# Copy this file to .env.local (never commit .env.local) and fill in. #
######################################################################

# Database Configuration
MONGODB_URI=
MONGODB_DB=

# Authentication
JWT_SECRET=

# Application (usually set automatically in hosting; leave blank locally if unsure)
NODE_ENV=

# Admin (bootstrap only; remove once an admin user exists in DB)
ADMIN_EMAIL=
ADMIN_PASSWORD=

# 100ms Video Call
HMS_ACCESS_KEY=
HMS_SECRET=
HMS_TEMPLATE_ID=
HMS_REGION=
HMS_SUBDOMAIN=
HMS_MANAGEMENT_TOKEN=

# Razorpay (Live or Test) - public key is exposed client side
NEXT_PUBLIC_RAZORPAY_KEY_ID=
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_SMS_FROM=
TWILIO_WHATSAPP_FROM=
TWILIO_VERIFY_SERVICE_SID=

# SendGrid
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# Cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Notifications & Cron
# Public site base URL for generating meeting/join links in messages (e.g., https://your-domain.com)
NEXT_PUBLIC_BASE_URL=
# Set to any non-empty secret; used to authorize the reminders cron endpoint
CRON_SECRET=
# Optional: turn on verbose logging for notification sends ("1" to enable)
NOTIFICATIONS_DEBUG=

# OTP Settings (Phone Verification)
# Default country code for normalizing 10-digit numbers without + prefix (e.g., +91)
OTP_DEFAULT_COUNTRY_CODE=
# Code length (digits)
OTP_LENGTH=
# Expiry window in minutes
OTP_EXP_MIN=
# Max verification attempts
OTP_MAX_ATTEMPTS=

# Notes:
# - Do not add PORT here for Next.js (use default unless needed).
# - Set REQUIRE_DB=1 in production to prevent mock DB fallback.
# - For local dev, create strong random JWT_SECRET (e.g. 32+ chars).